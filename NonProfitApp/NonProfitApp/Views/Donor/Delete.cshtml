@model Donor

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title text-danger">Are you sure you want to delete this donor?</h5>
        <p class="card-text">@Model.FirstName</p>
        <p class="card-text">@Model.LastName</p>
    </div>
    <div class="card-body">
        <a asp-action="Index" asp-controller="Donor" class="btn btn-outline-primary">No</a>
        <form asp-action="Delete" method="post">
            <input asp-for="DonorId" type="hidden" />
            <input class="btn btn-outline-danger" type="submit" value="Yes" />
        </form>
    </div>
</div>
