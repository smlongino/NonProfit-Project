@model Donor

<form asp-action="Edit" asp-controller="Donor" method="post" class="row g-3">
    <input asp-for="DonorId" type = "hidden" />
    <input asp-for="Active" type="hidden"/>
    <div class="col-md-6">
        <label asp-for="FirstName" class="form-label">FirstName</label>
        <input asp-for="FirstName" class="form-control">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="LastName" class="form-label">LastName</label>
        <input asp-for="LastName" class="form-control">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Phone" class="form-label">Phone</label>
        <input asp-for="Phone" class="form-control">
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="StreetAddress" class="form-label">Address</label>
        <input asp-for="StreetAddress" class="form-control" placeholder="1234 Main St">
        <span asp-validation-for="StreetAddress" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="City" class="form-label">City</label>
        <input asp-for="City" class="form-control">
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="State" class="form-label">State</label>
        <input asp-for="State" class="form-control">
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="col-md-2">
        <label asp-for="Zip" class="form-label">Zip</label>
        <input asp-for="Zip" class="form-control">
        <span asp-validation-for="Zip" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Edit Donor</button>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

