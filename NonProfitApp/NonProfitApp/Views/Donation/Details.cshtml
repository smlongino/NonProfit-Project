@model Donation
<a asp-controller="Donation" asp-action="Index" class="btn btn-primary">Back to Donations</a>
<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Donation Date: @Model.DonationDate Donation Amount: @Model.DonationAmount Channel: @Model.Channel.ChannelType </h5>
        <a asp-controller="Donation" asp-action="Edit" asp-route-id="@Model.DonationId" class="btn btn-primary">Edit</a>
        <a a asp-controller="Donation" asp-action="Delete" asp-route-id="@Model.DonationId" class="btn btn-primary">Delete</a>
    </div>
</div>
